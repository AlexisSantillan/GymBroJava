<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    tools:context=".PantallaInicioActivity">


    <FrameLayout
        android:id="@+id/rutinaButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/claseButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintWidth_percent="1.0">


        <ImageButton
            android:id="@+id/imageRutina"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/boton_rutina"
            android:background="@null"
            android:scaleType="fitXY"
            android:onClick="openAgregarRutinaActivity"
            android:contentDescription="Imagen de rutina"/>

        <!-- Texto superpuesto -->
        <TextView
            android:id="@+id/textRutina"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Agregar Rutina"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:shadowColor="#FFFFFF"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="5"/>
    </FrameLayout>


    <FrameLayout
        android:id="@+id/claseButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/rutinaButton"
        app:layout_constraintBottom_toTopOf="@+id/dietaButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintWidth_percent="1.0">


        <ImageButton
            android:id="@+id/imageClase"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/boton_clase"
            android:background="@null"
            android:scaleType="fitXY"
            android:onClick="openAgregarClasesActivity"
            android:contentDescription="Imagen de clase"/>


        <TextView
            android:id="@+id/textClase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Agregar Clase"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:shadowColor="#FFFFFF"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="5"/>
    </FrameLayout>


    <FrameLayout
        android:id="@+id/dietaButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/claseButton"
        app:layout_constraintBottom_toTopOf="@+id/userButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintWidth_percent="1.0">


        <ImageButton
            android:id="@+id/imageDieta"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/boton_dieta"
            android:background="@null"
            android:scaleType="fitXY"
            android:onClick="openAgregarDietaActivity"
            android:contentDescription="Imagen de dieta"/>

        <!-- Texto superpuesto -->
        <TextView
            android:id="@+id/textDieta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Agregar Dieta"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:shadowColor="#FFFFFF"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="5"/>
    </FrameLayout>


    <FrameLayout
        android:id="@+id/userButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/dietaButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintWidth_percent="1.0">


        <ImageButton
            android:id="@+id/imageUsuario"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/boton_usuario"
            android:background="@null"
            android:scaleType="fitXY"
            android:onClick="openAgregarUsuariosActivity"
            android:contentDescription="Imagen de usuario"/>


        <TextView
            android:id="@+id/textUsuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Agregar Usuario"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:shadowColor="#FFFFFF"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="5"/>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
